
@using Models
@model Models.Course

@{
    Layout = null;
    //Course course = ViewBag.Course;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h1>Course Information</h1>
        @if(ViewBag.msc=="Success")
        {
        <h1 style="color:green">@(ViewBag.msc)</h1>
        }
        else if(ViewBag.msc=="Fialed")
        {
        <h1 style="color: red">@(ViewBag.msc)</h1>
        }


        <div class="container">
            <form method="post">
                <div class="form-horizontal">
                    <h1>Course Information</h1>
                    <div class="form-group">
                        <label>Organization</label>
                        @Html.DropDownListFor(c => c.OrganizationId, Model.SelectListItemsOraganization, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.OrganizationId)
                    </div>
                    <div class="form-group ">
                        <label>Name</label>
                        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Name)
                    </div>
                    <div class="form-group ">
                        <label>Code</label>
                        @Html.TextBoxFor(c => c.Code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Code)
                    </div>
                    <div class="form-group ">
                        <label>Duration</label>
                        @Html.TextBoxFor(c => c.Duration, new { @class = "form-control" })
                    </div>

                    <div class="form-group ">
                        <label>Credit</label>
                        @Html.TextBoxFor(c => c.Credit, new { @class = "form-control" })
                    </div>
                    <div class="form-group ">
                        <label>Outline</label>
                        @Html.TextBoxFor(c => c.Outline, new { @class = "form-control" })
                    </div>
                    <div class="form-group ">
                        <label>Tags</label>
                        @Html.TextBoxFor(c => c.Tags, new { @class = "form-control" })
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
